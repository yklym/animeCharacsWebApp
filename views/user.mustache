<!doctype html>
<html lang="en">

{{> head}}

<body>
  <!-- logo top -->
  {{> header}}


  <!-- Welcome -->
  <!-- <h1>Welcome!</h1> -->


  <!-- Side Navigation -->

  <!-- Main part -->

  <main class="user-profile">
    <div class="user-profile-flex-wrapper">
      <div class="picture-wrapper">
        <img src={{image}} width = "150px" height="150px" alt="">
      </div>
      <div class="user-details">

        <div class="user-profile-column-1 bold">
          <ul>
            <li class = "user-profile-row-1">Name:</li>
            <li class = "user-profile-row-2">Fullname:</li>
            <li class = "user-profile-row-3">Login:</li>
            <li class = "user-profile-row-4">Registration data:</li>

          </ul>
        </div>

        <div class="user-profile-column-2 italic">
          <ul>
            <li class = "user-profile-row-1">{{name}}</li>
            <li class = "user-profile-row-2">{{fullname}}</li>
            <li class = "user-profile-row-3">{{login}}</li>
            <li class = "user-profile-row-4">{{registredAt}}</li>

          </ul>
        </div>
        
        <div class="user-profile-column-3 bold">
          <ul>
            <li class = "user-profile-row-1">Some field:</li>
            <li class = "user-profile-row-2">Another field:</li>
            <li class = "user-profile-row-3">Also field:</li>
            <li class = "user-profile-row-4">Extra-field:</li>

          </ul>
        </div>


        <div class="user-profile-column-4 italic">
          <ul>
            <li class = "user-profile-row-1">love fields?</li>
            <li class = "user-profile-row-2">More fields</li>
            <li class = "user-profile-row-3">yeaah, Fields</li>
            <li class = "user-profile-row-4">----</li>

          </ul>
        </div>
      </div>
    </div>
  </main>

  <!-- footer -->

  {{> footer}}
</body>

</html>